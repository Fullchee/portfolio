{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"ignoreUnknown": false
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2
		},
		"globals": ["require", "module", "process", "__dirname"]
	},
	"json": {
		"formatter": {
			"indentWidth": 2
		}
	},
	"linter": {
		"enabled": true,
		"includes": [
			"!./.next/",
			"!./.pnp",
			"!./build",
			"!./coverage",
			"!./node_modules",
			"!./out/",
			"!**/.DS_Store",
			"!**/.env.development.local",
			"!**/.env.local",
			"!**/.env.production.local",
			"!**/.env.test.local",
			"!**/.pnp.js",
			"!**/.sentryclirc",
			"!**/.vercel",
			"!**/*.pem",
			"!**/npm-debug.log*",
			"**"
		],
		"rules": {
			"recommended": true
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
