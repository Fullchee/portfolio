{
	"compilerOptions": {
		"target": "ES2017",
		"module": "esnext",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": ["node_modules", ".next"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"pages-archive/projects/torontoWaterMonitor.mdx"
	]
}
